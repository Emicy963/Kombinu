# ==================================================
# KOMBINU - ENVIRONMENT VARIABLES TEMPLATE
# ==================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# ==================================================
# DJANGO SETTINGS
# ==================================================

# Secret key for Django (generate a new one for production!)
# You can generate one using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Debug mode (set to False in production)
DEBUG=True

# Allowed hosts (comma-separated, no spaces)
# Example for production: kombinu.onrender.com,www.kombinu.com
# Example for local: localhost,127.0.0.1
ALLOWED_HOSTS=localhost,127.0.0.1

# ==================================================
# SECURITY SETTINGS (Production)
# ==================================================

# CSRF Trusted Origins (for production, comma-separated, with https://)
# Example: https://kombinu.onrender.com,https://www.kombinu.com
# CSRF_TRUSTED_ORIGINS=https://kombinu.onrender.com

# CORS Settings
# Set to False in production and configure specific origins below
CORS_ALLOW_ALL_ORIGINS=True

# CORS Allowed Origins (comma-separated, only used if CORS_ALLOW_ALL_ORIGINS=False)
# Example: https://kombinu.onrender.com,https://www.kombinu.com
# CORS_ALLOWED_ORIGINS=https://kombinu.onrender.com

# ==================================================
# DATABASE SETTINGS (Optional - for PostgreSQL)
# ==================================================

# Uncomment and configure if using PostgreSQL instead of SQLite
# DATABASE_URL=postgresql://user:password@localhost:5432/kombinu_db

# ==================================================
# OPTIONAL SETTINGS
# ==================================================

# Timezone (default: Africa/Luanda)
# TZ=Africa/Luanda

# Language Code (default: pt-br)
# LANGUAGE_CODE=pt-br
